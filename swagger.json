{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "QA test app",
    "description": "QA testing application",
    "license": {
      "name": "ISC"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/register": {
      "post": {
        "tags": ["Auth"],
        "description": "Registration of a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {}
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is registred",
            "schema": {}
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["Auth"],
        "description": "User log in",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to log in",
            "schema": {}
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is logged in",
            "schema": {}
          }
        }
      }
    },
    "/api/logout": {
      "post": {
        "tags": ["Auth"],
        "description": "User logout",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to logout",
            "schema": {}
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "204": {
            "description": "",
            "schema": {}
          }
        }
      }
    },
    "/api/user/info": {
      "get": {
        "tags": ["User"],
        "description": "Information about current user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Information about user that logged in",
            "schema": {}
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Current user information",
            "schema": {}
          }
        }
      }
    }
  }
}
