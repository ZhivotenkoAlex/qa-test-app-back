    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "User log out",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "type": "string",
            "description": "Bearer token",
            "required": true
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "204": {
            "description": "The user was logged out"
          },
          "401": {
            "description": "Unauthorized error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Unauthorized"
                }
              }
