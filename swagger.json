    "/test-tech": {
      "get": {
        "tags": ["Questions"],
        "summary": "Get technical questions",
        "description": "Return 12 technical questions",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Provide questions",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "default": "success",
                  "description": "Responce status"
                },
                "code": {
                  "type": "integer",
                  "default": 200,
                  "description": "Responce code"
                },
                "data": {
                  "type": "array",

                  "items": {
                    "type": "object",
                    "properties": {
                      "answers": {
                        "type": "array",
                        "items": { "type": "string" },
                        "description": "Answers"
                      },
                      "question": {
                        "type": "string",
                        "description": "Question"
                      },
                      "questionId": {
                        "type": "string",
                        "description": "Question Id"
                      },
                      "rightAnswer": {
                        "type": "string",
                        "description": "Right answer"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/test-theory": {
      "get": {
        "tags": ["Questions"],
        "summary": "Get theory questions",
        "description": "Return 12 theory questions",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Provide questions",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "default": "success",
                  "description": "Responce status"
                },
                "code": {
                  "type": "integer",
                  "default": 200,
                  "description": "Responce code"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "answers": {
                        "type": "array",
                        "items": { "type": "string" },
                        "description": "Answers"
                      },
                      "question": {
                        "type": "string",
                        "description": "Question"
                      },
                      "questionId": {
                        "type": "string",
                        "description": "Question Id"
                      },
                      "rightAnswer": {
                        "type": "string",
                        "description": "Right answer"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/test-tech/right-answers": {
      "post": {
        "tags": ["Questions"],
        "summary": "Test result answers the technical test",
        "description": "Return number of correct answers",
        "parameters": [
          {
            "in": "body",
            "name": "Answers",
            "description": "List of 12 answers",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "questionId": { "type": "string" },
                  "currentAnswer": { "type": "string" }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Test result",
            "content":{
              "application/json":{
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "default": "success",
                  "description": "Responce status"
                },
                "code": {
                  "type": "integer",
                  "default": 200,
                  "description": "Responce code"
                },
                "data":{
                  "type":"object",
                  "properties": {
                  "rightAnswer": { "type": "integer" }
                }
                }
              }
            }
          }
          }
          }
        }
      }
    },
    "/test-theory/right-answers": {
      "post": {
        "tags": ["Questions"],
        "summary": "Test result answers the theory test",
        "description": "Return number of correct answers",
        "parameters": [
          {
            "in": "body",
            "name": "Answers",
            "description": "List of 12 answers",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "questionId": { "type": "string" },
                  "currentAnswer": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Test result",
            "content":{
              "application/json":{
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "default": "success",
                  "description": "Responce status"
                },
                "code": {
                  "type": "integer",
                  "default": 200,
                  "description": "Responce code"
                },
                "data":{
                  "type":"object",
                  "properties": {
                  "rightAnswer": { "type": "integer" }
                }
                }
              }
            }
          }
          }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationAndLoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123456"
          }
        }
      },
      "LogInResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "success",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 200,
            "description": "Responce code"
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "description": "Autorization token",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYwNmIyODEzODc2NDM0MjhhYzI1NTAzNiIsImlhdCI6MTYxNzY1MDcwMiwiZXhwIjoxNjE3NjU3OTAyfQ.bYMNgHTQGXnZsNXTfjoSKVvJzb20HDzbPzZxevXjSXw"
              },
              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "The logged in user email",
                    "format": "email"
                  }
                }
              }
            }
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "success",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 201,
            "description": "Responce code"
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "description": "Autorization token",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYwNmIyODEzODc2NDM0MjhhYzI1NTAzNiIsImlhdCI6MTYxNzY1MDcwMiwiZXhwIjoxNjE3NjU3OTAyfQ.bYMNgHTQGXnZsNXTfjoSKVvJzb20HDzbPzZxevXjSXw"
              },
              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "The new user email",
                    "format": "email"
                  }
                }
              }
            }
          }
        }
      },
      "InfoResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "success",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 200,
            "description": "Responce code"
          },
          "data": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "description": "The current user email",
                "format": "email"
              }
            }
          }
        }
      },
      "BadRequest": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "error",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 401,
            "description": "Responce code"
          },
          "data": {
            "type": "string",
            "description": "Error"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "NotFound": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "error",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 404,
            "description": "Responce code"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "Conflict": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "default": "error",
            "description": "Responce status"
          },
          "code": {
            "type": "integer",
            "default": 409,
            "description": "Responce code"
          },
          "data": {
            "type": "string",
            "description": "Error"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "DefaultError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
